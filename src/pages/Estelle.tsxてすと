// src/pages/EstelleChat.tsx
import { useState } from "react";
import { fetchEstelleResponse } from "../utils/openai";

export default function EstelleChat() {
  const [messages, setMessages] = useState<{ role: "user" | "estelle"; text: string }[]>([]);
  const [input, setInput] = useState("");

  const handleSend = async () => {
    if (!input.trim()) return;
    const userMessage = input.trim();
    setMessages((prev) => [...prev, { role: "user", text: userMessage }]);
    setInput("");
    const reply = await fetchEstelleResponse(userMessage);
    setMessages((prev) => [...prev, { role: "estelle", text: reply }]);
  };

  return (
    <div className="flex flex-col h-screen bg-[#000033] text-[#ffffcc] font-[Klee One]">
      {/* メッセージ表示エリア */}
      <div className="flex-1 overflow-y-auto p-4 space-y-3">
        {messages.map((msg, idx) => (
          <div
            key={idx}
            className={`max-w-[80%] px-4 py-2 rounded-md whitespace-pre-wrap ${
              msg.role === "user"
                ? "ml-auto bg-[#ffffdd] text-[#000033]"
                : "mr-auto bg-[#222244] text-[#ffffcc]"
            }`}
          >
            {msg.text}
          </div>
        ))}
      </div>

      {/* 入力エリア */}
      <div className="p-3 bg-[#000022] flex items-center gap-2">
        <input
          type="text"
          value={input}
          onChange={(e) => setInput(e.target.value)}
          onKeyDown={(e) => e.key === "Enter" && handleSend()}
          placeholder="こころのことばをどうぞ"
          className="flex-1 px-4 py-2 rounded-md bg-[#ffffdd] text-[#000033] placeholder-[#666666] focus:outline-none"
        />
        <button
          onClick={handleSend}
          className="px-4 py-2 bg-[#ffff99] text-[#000033] rounded-md hover:brightness-110"
        >
          送信
        </button>
      </div>
    </div>
  );
}
